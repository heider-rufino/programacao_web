13º) R:

function ultimate (x, y, z){
    if (x === undefined && y === undefined && z === undefined){
        return false
    
    }
    
        if (x && y === undefined && z === undefined){
        
            return x 
    }else{


            if (x && y && z === undefined){

                return x + y 
    }else{

    
                if (x && y && z){

                    return (x + y) / z 

                }
   
             }

         }

    }
________________________________________________________________

